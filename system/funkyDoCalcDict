FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

planeAverageAdvectionZ
{
    type swakExpression;
    outputControlMode timeStep;
    outputInterval 1;
    valueType surface;
    surfaceName testPlane;
    surface {
        type plane;
        basePoint (6.0 0.0 0.0);
        normalVector (1 0 0);
        interpolate true;
    };
    verbose true;
    expression "-U.z/U.x*gradUx.z";
    accumulations (weightedAverage);
}

planeAverageAdvectionY
{
    type swakExpression;
    outputControlMode timeStep;
    outputInterval 1;
    valueType surface;
    surfaceName testPlane;
    verbose true;
    expression "-U.y/U.x*gradUx.y";
    accumulations (weightedAverage);
}

planeAverageTurbTrans
{
    type swakExpression;
    outputControlMode timeStep;
    outputInterval 1;
    valueType surface;
    surfaceName testPlane;
    verbose true;
    expression "1/U.x*nut*laplacianUx";
    accumulations (weightedAverage);
}

planeAverageViscTrans
{
    type swakExpression;
    outputControlMode timeStep;
    outputInterval 1;
    valueType surface;
    surfaceName testPlane;
    verbose true;
    expression "1/U.x*1e-6*laplacianUx";
    accumulations (weightedAverage);
}

planeAverageUx
{
    type swakExpression;
    outputControlMode timeStep;
    outputInterval 1;
    valueType surface;
    surfaceName testPlane;
    verbose true;
    expression "U.x";
    accumulations (weightedAverage);
}

